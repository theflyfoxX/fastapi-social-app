{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run FastAPI App",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host", "0.0.0.0",
                "--port", "8000",
                "--reload"
            ],
            "env": {
                "ENVIRONMENT": "development"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Run Pytest Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests"
            ],
            "console": "integratedTerminal"
        }
    ]
}